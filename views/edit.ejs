<%- include("partials/header.ejs") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="post" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" id="" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" id="" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" ><%= blog.body %></textarea>
        </div>
        <input class="ui violet basic button big" type="submit" name="" id="">
    </form>
</div>

<%- include("partials/footer.ejs") %>